<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ash_gray</item>
        <item name="colorSecondaryVariant">@color/beige</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorOnPrimary">@color/ash_gray</item>
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorOnSecondary">@color/onyx</item>
        <item name="android:textColorPrimary">@color/beige</item>
        <item name="android:background">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/onyx</item>
    </style>
</resources>
